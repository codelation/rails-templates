<header>
  <div class="outer-container">
    <div class="branding">
      <%= link_to root_path do %>
        <i class="fa fa-pied-piper-alt"></i>
        <%= site_title %>
      <% end %>
    </div>
    <nav>
      <ul>
        <li class="features"><%= link_to "Features", features_path %></li>
        <li class="pricing"><%= link_to "Pricing", pricing_path %></li>
        <li class="contact"><%= link_to "Contact", contact_path %></li>
        <li class="divider"></li>
        <% if current_user %>
          <li class="user">
            <span><%= current_user.display_name %></span>
            <%= link_to edit_current_user_path, title: "Account Settings" do %>
              <i class="fa fa-cog"></i>
            <% end %>
            <%= link_to destroy_user_session_path, title: "Sign Out", method: :delete do %>
              <i class="fa fa-sign-out"></i>
            <% end %>
          </li>
        <% else %>
          <li class="new-session"><%= link_to "Sign In", new_user_session_path %></li>
          <li class="new-registration"><%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
