<div class="title">
  <h1><%= current_user.display_name %> / Organizations</h1>
</div>

<div class="outer-container">
  <%= render partial: "user_account/sidebar" %>

  <div class="page">
    <% if @organization_memberships.count > 0 %>
      <table class="default">
        <thead>
          <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Manage</th>
          </tr>
        </thead>
        <tbody>
          <% @organization_memberships.each do |membership| %>
            <tr>
              <td><%= membership.organization.name %></td>
              <td><%= membership.role.titleize %></td>
              <td>Transfer/Leave</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>
        Create an organization so you can include other users under
        a single account.
      </p>
    <% end %>

    <p>
      <%= link_to "New Organization", new_user_account_organization_path, class: "button" %>
    </p>
  </div>
</div>
