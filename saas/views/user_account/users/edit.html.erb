<% unless @user.errors.count == 0 %>
  <div id="error_explanation">
    <i class="fa fa-times"></i>
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited the form from being submitted:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="title">
  <h1><%= current_user.display_name %> / Profile</h1>
</div>

<div class="outer-container">
  <%= render partial: "user_account/sidebar" %>

  <div class="page">
    <fieldset>
      <legend>Profile</legend>
      <%= form_for @user, url: user_account_user_path do |f| %>
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>

        <div>
          <%= f.label :email, "Email Address" %><br>
          <%= f.email_field :email %>
        </div>

        <div class="submit">
          <%= f.submit "Save Profile" %>
        </div>
      <% end %>
    </fieldset>

    <fieldset>
      <legend>Change Password</legend>
      <%= form_for @user, url: user_account_user_path do |f| %>
        <div>
          <%= f.label :current_password, "Current Password" %><br>
          <%= f.password_field :current_password %>
        </div>

        <div>
          <%= f.label :password, "New Password" %><br>
          <%= f.password_field :password %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password" %><br>
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="submit">
          <%= f.submit "Update Password" %>
        </div>
      <% end %>
    </fieldset>
  </div>
</div>
