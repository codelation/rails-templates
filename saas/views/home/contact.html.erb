<h1>Contact Us</h1>

<% unless @contact_message.errors.count == 0 %>
  <div class="errors">
    <h4><%= pluralize(@contact_message.errors.count, "error") %> prohibited this form from being sent:</h4>
    <ul>
      <% @contact_message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @contact_message do |f| %>
  <div>
    <%= f.label :name, class: "required" %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= f.label :email, "Email Address", class: "required" %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :phone_number, "Phone Number" %>
    <%= f.text_field :phone_number %>
  </div>

  <div>
    <%= f.label :message, class: "required" %>
    <%= f.text_area :message %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>
